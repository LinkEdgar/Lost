<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:elevation="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adopt_card"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:src="@drawable/gradient_background"
                android:layout_margin="@dimen/vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/adopt_card_image"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/petImage"
                tools:layout_editor_absoluteX="16dp"/>

        <!-- TODO rename views. Add text to string resources-->

        <TextView
                android:textSize="@dimen/button_text_size"
                android:layout_margin="@dimen/vertical_margin"
                android:text="Have you seen me? Contact my owner so I can return home."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/petImage"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/textView2"/>

        <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/card_button_height"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_border"
                android:text="Contact"
                android:textColor="@color/colorLight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <View
                android:layout_marginRight="@dimen/horizontal_margin"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:background="@color/dividerColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>